#!/bin/bash


# Commands
case "$1" in
install)
    npm install
    ;;
ping)
    ansible -i deployment/hosts all -m ping
    ;;
bootstrap)
    echo "Enter root password when prompted"
    ansible-playbook -i deployment/hosts -k deployment/bootstrap.yml
    ;;
setup)
    ansible-playbook -i deployment/hosts -k deployment/setup.yml
    ;;
deploy)
    ansible-playbook -i deployment/hosts -s deployment/deploy.yml
    ;;
*)
    echo "Unknown command: $1. Try: bootstrap|ping|setup|deploy"
    ;;
esac
